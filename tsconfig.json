{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es2018", // or the version aligned with your Node.js version
    "module": "commonjs", // for compatibility with Node.js module system
    "outDir": "./dist", // specify where to output the compiled JS files
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false // important for generating JS files
  },
  "include": ["src"]
}
